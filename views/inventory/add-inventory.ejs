<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header') %>

<main>
  <h1>Add New Vehicle</h1>

  <% if (errors && errors.length > 0) { %>
    <div class="flash">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error %></li>
        <% }) %>
      </ul>
    </div>
  <% } else if (message.length > 0) { %>
    <div class="flash"><%= message %></div>
  <% } %>

  <form method="post" action="/inv/add-inventory">
    <label for="classification_id">Classification</label>
    <select name="classification_id" id="classification_id" required>
      <option value="">Choose one</option>
      <% classifications.forEach(c => { %>
        <option value="<%= c.classification_id %>" <%= formData && formData.classification_id == c.classification_id ? "selected" : "" %>>
          <%= c.classification_name %>
        </option>
      <% }) %>
    </select>

    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= formData?.inv_make || '' %>" required>

    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= formData?.inv_model || '' %>" required>

    <label for="inv_year">Year</label>
    <input type="number" id="inv_year" name="inv_year" min="1900" value="<%= formData?.inv_year || '' %>" required>

    <label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" required><%= formData?.inv_description || '' %></textarea>

    <label for="inv_image">Image Path</label>
    <input type="text" id="inv_image" name="inv_image" value="<%= formData?.inv_image || '/images/vehicles/no-image.jpg' %>" required>

    <label for="inv_thumbnail">Thumbnail Path</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= formData?.inv_thumbnail || '/images/vehicles/no-image-tn.jpg' %>" required>

    <label for="inv_price">Price</label>
    <input type="number" id="inv_price" name="inv_price" min="0" step="0.01" value="<%= formData?.inv_price || '' %>" required>

    <label for="inv_miles">Miles</label>
    <input type="number" id="inv_miles" name="inv_miles" min="0" value="<%= formData?.inv_miles || '' %>" required>

    <label for="inv_color">Color</label>
    <input type="text" id="inv_color" name="inv_color" value="<%= formData?.inv_color || '' %>" required>

    <button type="submit">Add Vehicle</button>
  </form>
</main>

<%- include('../partials/footer') %>
